    android:shape="rectangle">

    <corners
        android:radius="10dp"
        />

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="#B5DFE5" />

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp" />

    <!-- 테두리 설정: 두께, 색상 -->
    <stroke
        android:width="3dp"
        android:color="#FFFFFF" />

</shape>
